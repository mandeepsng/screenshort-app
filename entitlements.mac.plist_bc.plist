<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <!-- This is needed for the V8 JavaScript engine to function properly -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    
    <!-- Allows network connections -->
    <key>com.apple.security.network.client</key>
    <true/>

    <key>com.apple.security.app-sandbox</key>
    <false/>
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    <key>com.apple.security.device.audio-input</key>
    <true/>
    <key>com.apple.security.device.camera</key>
    <true/>
    <key>com.apple.security.device.screen-recording</key>
    <true/>
    
    <key>com.apple.security.automation.apple-events</key>
    <true/>
    <key>com.apple.security.scripting-targets</key>
    <true/>



    <key>com.apple.security.hardened-runtime</key>
    <true/>

    <!-- Correct permission for screen recording -->
    <key>com.apple.security.device.screen-recording</key>
    <true/>

    <!-- Allow automation events (if needed) -->
    <key>com.apple.security.automation.apple-events</key>
    <true/>

    <!-- Allow reading & writing pictures -->
    <key>com.apple.security.assets.pictures.read-write</key>
    <true/>

    <!-- Add full disk access entitlement if your app needs it -->
    <key>com.apple.security.assets.full-disk-access</key>
    <true/>

    <!-- If your app requires accessibility permissions, this should be enabled -->
    <key>com.apple.security.accessibility</key>

  </dict>
</plist>